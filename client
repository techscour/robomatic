#!/usr/bin/env ruby

require "readline"
require 'open-uri'
require 'uri'

unless ARGV.size == 1
  puts 'usage: client url'
  exit
end

host = ARGV[0]

def hostget(host)
  response = []
  open(host) {|f|
    f.each_line {|line| response << line}
  }
  response
end

mode = 'command'
puts hostget(host)
while buf = Readline.readline("> ", true)
  return if buf == nil
  buf = buf.strip

  if buf == 'close'
    puts 'bye'
    exit
  elsif buf == 'compose'
    mode = 'compose'
    puts 'compose'
  elsif buf == 'compile'
    mode = 'command'
    puts hostget("#{host}/compile")
  elsif buf == 'clear'
    mode = 'command'
    puts hostget("#{host}/clear")
  elsif buf == 'composed'
    puts hostget("#{host}/composed")
  elsif mode == 'command'
    next if buf.empty?
    puts hostget("#{host}/command?text=#{URI.encode(buf)}")
  elsif mode == 'compose'
    next if buf.empty?
    puts hostget("#{host}/compose?text=#{URI.encode(buf)}")
  else
     thow 'oops'
  end
end

